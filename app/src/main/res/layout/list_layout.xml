<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="4dp"

    android:layout_marginRight="4dp"

    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
       android:layout_margin="8dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/tertiary_text_dark"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sunday, text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.TextView"
            android:layout_marginTop="8dp"
            android:text="Confirmed Cases"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@android:color/primary_text_light"
            android:alpha=".8"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Recovered Cases"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@android:color/primary_text_light"
            android:alpha=".8"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <TextView
            android:id="@+id/text_cases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1239339"
            android:paddingLeft="2dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            app:layout_constraintEnd_toStartOf="@+id/text_recovered"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/text_recovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3544"
            android:paddingLeft="2dp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textAllCaps="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_cases"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toEndOf="@+id/text_cases"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/tva"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Active cases"
            android:paddingLeft="4dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:textColor="@android:color/primary_text_light"
            android:alpha=".8"
            app:layout_constraintEnd_toStartOf="@+id/tvd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_cases" />

        <TextView
            android:id="@+id/tvd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Death"
            android:paddingLeft="4dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@android:color/primary_text_light"
            android:alpha=".8"
            android:textAllCaps="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/tva"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toEndOf="@+id/tva"
            app:layout_constraintTop_toBottomOf="@+id/text_cases" />



        <TextView
            android:id="@+id/tvactive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1239339"
            android:paddingLeft="2dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintEnd_toStartOf="@+id/tvdeath"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvd" />

        <TextView
            android:id="@+id/tvdeath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="3544"
            android:paddingLeft="2dp"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight=".5"
            app:layout_constraintStart_toEndOf="@+id/tvactive"
            app:layout_constraintTop_toBottomOf="@+id/tvd" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>